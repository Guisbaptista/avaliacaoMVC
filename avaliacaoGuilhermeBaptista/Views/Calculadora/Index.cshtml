@{
    ViewBag.Title = "Calculadora";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/Calculadora.css" rel="stylesheet" type="text/css" />
</head>
<body>
    
    <div id="container"> 
        <div id="centro">
            <h2>Calculadora MVC</h2>

            <form method="post" action="@Url.Action("Calcular", "Calculadora")">
                <label for="numero1">Número 1:</label>
                <input type="text" name="numero1" required />

                <label for="numero2">Número 2:</label>
                <input type="text" name="numero2" required />

                <label for="operacao">Operação:</label>
                <select name="operacao" required>
                    <option value="soma">Soma</option>
                    <option value="subtracao">Subtração</option>
                    <option value="multiplicacao">Multiplicação</option>
                    <option value="divisao">Divisão</option>
                </select>

                <input type="submit" value="Calcular" />
            </form>
        </div>
    </div>

    @if (ViewBag.Resultado != null)
    {
        <div id="resultadoDiv">
            <h2>Resultado da Operação</h2>
            <p>O resultado da @ViewBag.Operacao é: @ViewBag.Resultado</p>
        </div>
    }

    @if (ViewBag.ErroOperacaoInvalida != null)
    {
        <div>
            <p>@ViewBag.ErroOperacaoInvalida</p>
        </div>
    }

    @if (ViewBag.ErroDivisaoPorZero != null)
    {
        <div >
            <p>@ViewBag.ErroDivisaoPorZero</p>
        </div>
    }

</body>
</html>
